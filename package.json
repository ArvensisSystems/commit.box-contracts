{
  "name": "@arvensissystems/commit.box-contracts",
  "description": "commit.box contracts",
  "version": "1.0.0",
  "author": {
    "name": "ArvensisSystems",
    "url": "https://github.com/ArvensisSystems"
  },
  "main": "generated/index.js",
  "types": "generated/index.d.ts",
  "files": [
    "generated"
  ],
  "dependencies": {
    "solady": "^0.1.17",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.12",
    "@types/node": "^22.15.17",
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity"
  ],
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "forge fmt --check && bun solhint \"{script,src,tests}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\"",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "deploy:sol": "forge script script/Deploy.s.sol --rpc-url ${NETWORK:localhost} --broadcast --interactives 1 && bun script/generate.ts",
    "generate:abi": "bun script/generate.ts"
  }
}
